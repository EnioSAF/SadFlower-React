{  
    "$schema": "https://wixplosives.github.io/codux-config-schema/codux.config.schema.json",
    "styling": {
        "solution": "sass"
    },
    "newComponent": {
        "componentsPath": "src/_codux/components"
    },
    "sassCompilation": {
        "modules": {
            "include": [
                "*.sass",
                "*.module.sass"
            ],
            "ignore": []
        },
        "compilerRuntime": "auto",
        "resolveUrls": true,
        "includePaths": [
            "styles/system32/windows",
            "styles",
            "./styles/system32/windows"
        ]
    }
}